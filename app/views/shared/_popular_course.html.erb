<div class="common-class">
  <h3><%= t ".popular_course" %></h3>
  <ul>
    <% popular_courses.each do |popular| %>
      <li>
        <div class="img-class">
          <%= link_to course_path(popular) do %>
            <%= load_image popular %>
          <% end %>
        </div>
        <div class="info-class">
          <%= link_to popular.name, course_path(popular) %>
          <%= appear_cost popular.cost %>
        </div>
      </li>      
    <% end %>
  </ul>
</div>
